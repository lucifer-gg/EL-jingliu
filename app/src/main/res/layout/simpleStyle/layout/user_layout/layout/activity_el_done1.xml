<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.el_done1.user">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/face_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:riv_oval="true"
            android:src="@drawable/change_face__button_image_"
            android:layout_alignBottom="@id/points"
            android:layout_alignTop="@id/name"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="昵称："
            android:layout_marginLeft="90dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="专注次数："
            android:layout_marginLeft="90dp"
            android:layout_marginRight="40dp"
            android:layout_marginVertical="10dp"
            android:layout_below="@id/name"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/motto"
            android:text="座右铭"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:maxLines="3"
            android:layout_below="@id/points"
            android:layout_marginHorizontal="20dp"
            />

        <Button
            android:id="@+id/dairy"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/motto"
            android:layout_margin="20dp"
            android:text="日志/足迹->"
            android:textSize="20sp" />

        <Button
            android:id="@+id/weekReport"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dairy"
            android:layout_margin="20dp"
            android:text="周报->"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/friends"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weekReport"
            android:layout_margin="20dp"
            android:text="好友->"
            android:textSize="20sp" />

        <Button
            android:id="@+id/setting"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/friends"
            android:layout_margin="20dp"
            android:text="设置->"
            android:textSize="20sp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/self_refresh_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:riv_oval="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/shuaxin"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
