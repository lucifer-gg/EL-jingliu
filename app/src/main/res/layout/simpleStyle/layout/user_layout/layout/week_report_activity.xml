<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.el_done1.WeekReportActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="8"
        android:columnCount="3"
        android:background="@drawable/week_report_bg">

        <Button
            android:id="@+id/week_report_back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_column="0"
            android:layout_row="0"
            android:text="←返回"
            />
        <TextView
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:text="周报"
            android:textSize="20sp"
            />
        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:text="星期一"
            android:layout_marginLeft="20dp"
            />
        <ImageButton
            android:id="@+id/week_report_monday"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/week_report_image"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_row="1"
            android:layout_column="1"
            android:text="星期二"
            android:layout_marginLeft="20dp"
            />
        <ImageButton
            android:id="@+id/week_report_tuesday"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/week_report_image"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_row="1"
            android:layout_column="2"
            android:text="星期三"
            android:layout_marginLeft="20dp"
            />
        <ImageButton
            android:id="@+id/week_report_wednesday"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/week_report_image"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:text="星期四"
            android:layout_marginLeft="20dp"
            />
        <ImageButton
            android:id="@+id/week_report_thursday"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/week_report_image"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_row="3"
            android:layout_column="1"
            android:text="星期五"
            android:layout_marginLeft="20dp"
            />
        <ImageButton
            android:id="@+id/week_report_friday"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/week_report_image"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_row="3"
            android:layout_column="2"
            android:text="星期六"
            android:layout_marginLeft="20dp"
            />
        <ImageButton
            android:id="@+id/week_report_saturday"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/week_report_image"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_row="5"
            android:layout_column="1"
            android:text="星期日"
            android:layout_marginLeft="20dp"
            />
        <ImageButton
            android:id="@+id/week_report_sunday"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/week_report_image"
            android:layout_margin="5dp"
            />
    </GridLayout>
</android.support.constraint.ConstraintLayout>
