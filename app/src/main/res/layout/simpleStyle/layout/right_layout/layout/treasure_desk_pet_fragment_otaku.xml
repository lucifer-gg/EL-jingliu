<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="6"
    >

    <TextView
        android:id="@+id/simple_desk_pet_moli_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小樱茉莉"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        />
    <com.example.administrator.el_done1.TreasureDeskPetView
        android:id="@+id/treasure_desk_pet_otaku_0_0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/moli1"
        android:layout_margin="10dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/simple_desk_pet_chuyin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="初音未来"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="5dp"
        />
    <com.example.administrator.el_done1.TreasureDeskPetView
        android:id="@+id/treasure_desk_pet_otaku_0_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/chuyin1"
        android:layout_margin="10dp"
        android:layout_row="1"
        android:layout_column="1"
        />
    <TextView
        android:id="@+id/simple_desk_pet_gumingdijue_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="古明地觉"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center"
        />
    <com.example.administrator.el_done1.TreasureDeskPetView
        android:id="@+id/treasure_desk_pet_otaku_1_0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/gumingdijue1"
        android:layout_margin="10dp"
        android:layout_row="3"
        android:layout_column="0"
        />
    <TextView
        android:id="@+id/simple_desk_pet_maoerniang_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="猫儿萌娘"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="5dp"
        />
    <com.example.administrator.el_done1.TreasureDeskPetView
        android:id="@+id/treasure_desk_pet_otaku_1_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/maoerniang1"
        android:layout_margin="10dp"
        android:layout_row="3"
        android:layout_column="1"
        />
    <TextView
        android:id="@+id/simple_desk_pet_maoerkunan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="猫耳酷男"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="center"
        />
    <com.example.administrator.el_done1.TreasureDeskPetView
        android:id="@+id/treasure_desk_pet_otaku_2_0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/maoerkunan1"
        android:layout_margin="10dp"
        android:layout_row="5"
        android:layout_column="0"
        />
    <TextView
        android:id="@+id/simple_desk_pet_yinshi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="坂田银时"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_margin="5dp"
        />
    <com.example.administrator.el_done1.TreasureDeskPetView
        android:id="@+id/treasure_desk_pet_otaku_2_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/yinshi1"
        android:layout_margin="10dp"
        android:layout_row="5"
        android:layout_column="1"
        />
</GridLayout>