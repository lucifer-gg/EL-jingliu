<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.el_done1.FriendInfomationActivity">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/friend_information_face_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:riv_oval="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:src="@drawable/change_face__button_image_"
        />

    <TextView
        android:id="@+id/friend_information_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/friend_information_face_image"
        android:text="好友昵称："
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="15dp"
        />
    <TextView
        android:id="@+id/friend_information_motto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/friend_information_sex"
        android:text="座右铭："
        android:textSize="20sp"
        android:gravity="center"
        android:layout_margin="15dp"
        />
    <TextView
        android:id="@+id/friend_information_profession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/friend_information_motto"
        android:text="职业："
        android:textSize="20sp"
        android:gravity="center"
        android:layout_margin="15dp"
        />
    <TextView
        android:id="@+id/friend_information_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/friend_information_profession"
        android:text="邮箱："
        android:textSize="20sp"
        android:gravity="center"
        android:layout_margin="15dp"
        />
    <TextView
        android:id="@+id/friend_information_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/friend_information_name"
        android:text="性别："
        android:textSize="20sp"
        android:gravity="center"
        android:layout_margin="15dp"
        />
</RelativeLayout>
