<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.el_done1.SettingActivity"
    android:background="@drawable/setting_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/setting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="设置"
            android:textSize="30sp"
            android:layout_margin="30dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_image"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/set_back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←返回" />

        <Button
            android:id="@+id/set_self_information"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_text"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:text="个人信息->"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/set_theme"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_self_information"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="20dp"
            android:text="风格、主题->"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/set_delete_data"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_theme"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:text="清理数据->"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/set_change_user"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_delete_data"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:text="切换账号->"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/set_help"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_change_user"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:text="关于与帮助->"
            android:textSize="20sp"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
