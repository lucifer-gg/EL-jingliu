<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.el_done1.SettingThemeActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="5">

        <Button
            android:id="@+id/set_theme_back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="←返回"
            />
        <TextView
            android:layout_height="50dp"
            android:layout_width="100dp"
            android:gravity="center"
            android:text="主题"
            />
        <ImageButton
            android:id="@+id/cartoon_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/set_otaku_theme_photo"
            android:layout_row="1"
            android:layout_column="0"
            />
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/cartoon_theme_text"
            android:layout_column="0"
            android:layout_row="2"
            android:text="二次元"
            />
        <ImageButton
            android:id="@+id/pets_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/set_cute_pet_theme_photo"
            android:layout_row="1"
            android:layout_column="1"
            />
        <TextView
            android:id="@+id/pets_theme_text"
            android:layout_column="1"
            android:layout_row="2"
            android:text="萌宠"
            android:layout_gravity="center_horizontal"
            />
        <ImageButton
            android:id="@+id/simple_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/set_simple_theme_photo"
            android:layout_column="2"
            android:layout_row="1"
            />
        <TextView
            android:id="@+id/choose_self_theme_text"
            android:layout_column="2"
            android:layout_row="2"
            android:text="极简"
            android:layout_gravity="center_horizontal"
            />
    </GridLayout>
</android.support.constraint.ConstraintLayout>
