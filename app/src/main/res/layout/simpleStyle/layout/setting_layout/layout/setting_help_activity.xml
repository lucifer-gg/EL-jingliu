<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.administrator.el_done1.SettingHelpActivity"
    >

    <Button
        android:id="@+id/set_help_back"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="←返回" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于与帮助"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/set_help_back"
        android:layout_alignBottom="@id/set_help_back"
        />
    <Button
        android:id="@+id/help_check_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="版本号：3.32     new->"
        android:layout_marginTop="200dp"
        />
    <Button
        android:id="@+id/help_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="关于我们      ->"
        android:layout_below="@id/help_check_version"
        />
</RelativeLayout>
